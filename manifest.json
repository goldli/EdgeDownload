{
  "background": {
    "matches": ["http://*/*", "https://*/*"],
    "service_worker": "scripts/background.js"
  },
  "author": "Ai2soft.cn",
  "name": "Ai2soft Edge下载路径设置",
  "version": "0.0.0.1",
  "manifest_version": 3,
  "description": "对Edge文件下载的存储路径进行分类设置",
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png"
  },
  "action": {
    "default_icon": {
        "16": "icons/16.png",
        "32": "icons/32.png",
        "48": "icons/48.png"
    }
  },
  "permissions": [ "downloads", "downloads.open", "storage", "tabs","activeTab" ],
  "host_permissions": ["*://*/*"],
  "options_page": "options.html"
}
